<!doctype html>
@inject MyECommerceWebSite2022.Resources.LocalizationService _localizer
<html dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft? "rtl" : "ltr")">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Dashboard</title>    
    <link href="~/UserAssets/webfonts/CairoArabicFonts.css" rel="stylesheet" />

    <link href="~/bootstrap-icons-1.8.0/bootstrap-icons.css" rel="stylesheet" />
    @if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en")
    {
        <link href="~/bootstrap-5.1.3/css/bootstrap.min.css" rel="stylesheet" />

    }
    else
    {
        <link href="~/bootstrap-5.1.3/css/bootstrap.rtl.min.css" rel="stylesheet" />
    }

    <style>

        body {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-family: 'Cairo', sans-serif;
           /* font-weight: bold;*/
            background-color: whitesmoke;
        }

        h1, h2, h3, h4, h5, h6 {
            color: darkcyan;
        }

        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @@media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }

        th {
            background-color: teal !important;
        }
    </style>

    <link href="dashboard.css" rel="stylesheet">
</head>
<body>

    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" style="padding-right: 50px !important; padding-left: 50px !important;" href="">Company Name</a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @*<input class="form-control form-control-dark w-50" type="text" placeholder="Search" aria-label="Search">*@
        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
                <a class="nav-link px-3" asp-controller="User" asp-action="Index">User</a>
            </div>
        </div>
        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
                @await Html.PartialAsync("_SetLanguagePartial")
            </div>
        </div>

    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-primary sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link link-primary bg-body" aria-current="page" asp-controller="Home" asp-action="AdminPanel">
                                <span data-feather="home"></span>
                                @_localizer.GetLocalizedHtmlString("Home")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-light" aria-current="page" asp-controller="CompanyData" asp-action="Index">
                                <span data-feather="bar-chart-2"></span>
                                @_localizer.GetLocalizedHtmlString("CompanyDataTab")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-light" aria-current="page" asp-controller="Units" asp-action="Index">
                                <span data-feather="file-text"></span>
                                @_localizer.GetLocalizedHtmlString("UnitsTab")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-light" aria-current="page" asp-controller="Curunces" asp-action="Index">
                                <span data-feather="dollar-sign"></span>
                                @_localizer.GetLocalizedHtmlString("CuruncesTab")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-light" aria-current="page" asp-controller="Groups" asp-action="Index">
                                <span data-feather="layers"></span>
                                @_localizer.GetLocalizedHtmlString("GroupsTab")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-light" aria-current="page" asp-controller="Items" asp-action="Index">
                                <span data-feather="plus-circle"></span>
                                @_localizer.GetLocalizedHtmlString("ItemsTab")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-light" aria-current="page" asp-controller="Invoices" asp-action="Index">
                                <span data-feather="shopping-cart"></span>
                                @_localizer.GetLocalizedHtmlString("OrdersTab")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link-light" aria-current="page" asp-controller="Slider" asp-action="Index">
                                <span data-feather="image"></span>
                                @_localizer.GetLocalizedHtmlString("SliderTab")
                            </a>
                        </li>
                    </ul>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link link-light" data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="true">
                                <span data-feather="plus-circle"></span>
                                اعدادات الدول
                            </a>
                            <div class="collapse" id="home-collapse" style="padding-right: 50px; padding-left: 50px;">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="#" class="link-dark">الدول</a></li>
                                    <li><a href="#" class="link-dark">المحافظات</a></li>
                                    <li><a href="#" class="link-dark">المدن</a></li>
                                </ul>
                            </div>
                        </li>

                    </ul>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link link-light" data-bs-toggle="collapse" data-bs-target="#report-collapse" aria-expanded="true">
                                <span data-feather="plus-circle"></span>
                                التقارير
                            </a>
                            <div class="collapse" id="report-collapse" style="padding-right: 50px; padding-left: 50px;">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="#" class="link-dark rounded">تقرير رصيد الأصناف</a></li>
                                    <li><a href="#" class="link-dark rounded">تقرير مبيعات الاصناف</a></li>
                                    <li><a href="#" class="link-dark rounded">تقرير الاصناف الاكثر مبيعات</a></li>
                                </ul>
                            </div>
                        </li>

                    </ul>




                </div>
            </nav>





            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"> @_localizer.GetLocalizedHtmlString("Dashboard")</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            @*<button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>*@
                        </div>
                        @*<button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                                <span data-feather="calendar"></span>
                                This week
                            </button>*@
                    </div>
                </div>

                @RenderBody()


            </main>
        </div>

    </div>
    @RenderBody()
    <div class="mt-5 p-4 bg-dark text-white text-center">
        <p>Footer</p>
    </div>

    @*<script src="../assets/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/assets/js/jquery-3.4.1.min.js"></script>
    <script src="~/bootstrap-5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js" integrity="sha384-uO3SXW5IuS1ZpFPKugNNWqTZRRglnUJK6UAZ/gxOX80nxEkN9NcGZTftn6RzhGWE" crossorigin="anonymous"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js" integrity="sha384-zNy6FEbO50N+Cg5wap8IKA4M/ZnLJgzc6w2NqACZaK0u0FXfOWRRJOnQtpZun8ha" crossorigin="anonymous"></script>*@
    @*<script src="dashboard.js"></script>*@
    <script src="~/bootstrap-5.1.3/js/dashboard.js"></script>
   

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>
