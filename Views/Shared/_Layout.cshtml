<!DOCTYPE html>
@inject MyECommerceWebSite2022.Resources.LocalizationService _localizer
<html dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft? "rtl" : "ltr")">
<head>
    <title>@ViewData["Title"] - MyECommerceWebSite</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />*@


    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <link rel="icon" href="images/fevicon.png" type="image/gif" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Minics</title>
    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet"> <!-- range slider -->
    <!-- font awesome style -->
    <link href="~/assets/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/assets/css/responsive.css" rel="stylesheet" />

    @if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en")
    {
        <link href="~/assets/css/bootstrap.css" rel="stylesheet" />       
    }
    else
    {
        <link href="~/lib/bootstrap-4.3.1-rtl/dist/css/rtl/bootstrap.css" rel="stylesheet" />
    }


</head>
<body>

    <div class="hero_area">
        <!-- header section strats -->
        <header class="header_section fixed-top">
            <div class="header_top" style="max-height: 50px; padding-top: 0px;">
                <div class="container-fluid">
                    <div class="top_nav_container">
                        <div class="contact_nav">
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                    Call : +01 123455678990
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>
                                    Email : demo@gmail.com
                                </span>
                            </a>
                        </div>
                        <from class="search_form">
                            
                            <button class="" type="submit">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                            <input type="text" class="form-control" placeholder="Search here...">
                        </from>
                        <div class="user_option_box">
                            <a href="" class="account-link" data-toggle="tab">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <span>
                                    @_localizer.GetLocalizedHtmlString("MyAccount")
                                </span>
                            </a>
                            <a href='#InvoiceTab' data-toggle="tab" class="cart-link nav notification" id="invLst">
                                <span id="shopingCar" class="badge">0</span>
                                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                @*<span>
                                    @_localizer.GetLocalizedHtmlString("Cart")
                                </span>*@
                            </a>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="header_bottom"style="max-height: 50px; padding-top:0px;">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg navbar-toggleable-sm custom_nav-container">
                        <a class="navbar-brand" href="#">
                            <span>
                                @_localizer.GetLocalizedHtmlString("SiteName") 
                            </span>
                        </a>

                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class=" "> </span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="nav navbar-nav">
                                @*nav nav-fill*@
                                <li class="nav-item active">
                                    <a class="nav-link" data-toggle="tab" href="#HomeTab" id="Home">@_localizer.GetLocalizedHtmlString("Home") <span class="sr-only">(current)</span></a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#ItemsTab" id="Items">@_localizer.GetLocalizedHtmlString("Products")</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#AboutTab" id="About">@_localizer.GetLocalizedHtmlString("About") </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#InvoiceTab" id="Invoice">@_localizer.GetLocalizedHtmlString("Invoice") </a>
                                </li>
                            </ul>
                            <ul class="nav justify-content-end" style="color:white;">
                                <li class="nav-item" style="color:white;">
                                    @await Html.PartialAsync("_SetLanguagePartial")
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <!-- end header section -->
    </div>

   
    @RenderBody()
   
    <!-- info section -->
    <section class="info_section ">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="info_contact">
                        <h5>
                            <a href="" class="navbar-brand">
                                <span>
                                    Minics
                                </span>
                            </a>
                        </h5>
                        <p>
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            Address
                        </p>
                        <p>
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            +01 1234567890
                        </p>
                        <p>
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            demo@gmail.com
                        </p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info_info">
                        <h5>
                            Information
                        </h5>
                        <p>
                            Eligendi sunt, provident, debitis nemo, facilis cupiditate velit libero dolorum aperiam enim nulla iste maxime corrupti ad illo libero minus.
                        </p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info_links">
                        <h5>
                            Useful Link
                        </h5>
                        <ul>
                            <li>
                                <a href="index.html">
                                    Home
                                </a>
                            </li>
                            <li>
                                <a href="about.html">
                                    About
                                </a>
                            </li>
                            <li>
                                <a href="product.html">
                                    Products
                                </a>
                            </li>
                            <li>
                                <a href="why.html">
                                    Why Us
                                </a>
                            </li>
                            <li>
                                <a href="testimonial.html">
                                    Testimonial
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info_form ">
                        <h5>
                            Newsletter
                        </h5>
                        <form action="">
                            <input type="email" placeholder="Enter your email">
                            <button>
                                Subscribe
                            </button>
                        </form>
                        <div class="social_box">
                            <a href="">
                                <i class="fa fa-facebook" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-twitter" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-instagram" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-youtube" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- end info_section -->
    <!-- footer section -->
    <footer class="footer_section">
        <div class="container">
            <p>
                &copy; <span id="displayYear"></span> All Rights Reserved By
                <a href="https://html.design/">Free Html Templates</a>
            </p>
        </div>
    </footer>
    <!-- footer section -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    
    <script src="~/assets/js/jquery-3.4.1.min.js"></script>   
    <script src="~/assets/js/custom.js"></script>

    @if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en")
    {
        <script src="~/assets/js/bootstrap.js"></script>

    }
    else
    {        
        <script src="~/lib/bootstrap-4.3.1-rtl/dist/js/bootstrap.js"></script>
    }
</body>
</html>
