<script>

    $(document).ready(function () {

        $.ajax({

            type: "get",
            url: "/CompanyData/GetCompanyData",
            dataType: "json",
            success: function (cv) {
                debugger;
                $("#hederMail").html(cv.email);
                $("#hederPhone").html(cv.mobile);

                $("#foterPhone").html(cv.mobile);
                $("#foterMail").html(cv.email);
                $("#hederfacebook").attr("href", cv.faceBookLink);
                $("#hederinstagram").attr("href", cv.instgramLink);
                $("#hedertwitter").attr("href", cv.twitterLink);
                $("#hederlinkedin").attr("href", cv.linkedinLink);

                $("#foterfacebook").attr("href", cv.faceBookLink);
                $("#foterinstagram").attr("href", cv.instgramLink);
                $("#fotertwitter").attr("href", cv.twitterLink);
                $("#foterlinkedin").attr("href", cv.linkedinLink);

                if (document.documentElement.dir.toLowerCase() == "ltr") {
                    $("#SiteName").html(cv.companyNameEn);
                    $("#fSiteName").html(cv.companyNameEn);
                    $("#foterAddress").html(cv.addressEn);
                    $("#title").html(cv.companyNameEn);
                    $("#copyRigthtitle").html(cv.companyNameEn);
                }
                if (document.documentElement.dir.toLowerCase() == "rtl") {
                    $("#SiteName").html(cv.companyNameAr);
                    $("#fSiteName").html(cv.companyNameAr);
                    $("#foterAddress").html(cv.addressAr);
                    $("#title").html(cv.companyNameAr);
                    $("#copyRigthtitle").html(cv.companyNameAr);
                }

            }
        });


        $.ajax({
            type: "get",
            url: "/CompanyData/getGroups",
            dataType: "json",
            success: function (r) {
                var card = "";
                $("#GroupsTabs").empty();
                $.each(r, function (k, v) {
                    debugger

                    if (document.documentElement.dir.toLowerCase() == "ltr") {
                        card = '<li><a class="text-decoration-none" href="/User/Prouducts/' + v.id + '"> ' + v.groupNameEn + '</a></li>';
                    }
                    if (document.documentElement.dir.toLowerCase() == "rtl") {
                        card = '<li><a class="text-decoration-none" href="/User/Prouducts/' + v.id + '"> ' + v.groupNameAr + '</a></li>';
                    }
                    $("#GroupsTabs").append(card);
                });

            }
        });

    });

</script>