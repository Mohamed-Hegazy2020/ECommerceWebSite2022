@model List<MyECommerceWebSite2022.ModelsView.ItemsViewModel>
@inject MyECommerceWebSite2022.Resources.LocalizationService _localizer
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<title>@_localizer.GetLocalizedHtmlString("Products")</title>

<script src="~/UserAssets/js/jquery-1.11.0.min.js"></script>
<div id="ProuductsDiv">
    <div class="modal fade bg-white" id="templatemo_search" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="w-100 pt-1 mb-5 text-right">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="" method="get" class="modal-content modal-body border-0 p-0">
                <div class="input-group mb-2">
                    <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Search ...">
                    <button type="submit" class="input-group-text bg-success text-light">
                        <i class="fa fa-fw fa-search text-white"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
    <!-- Start Content -->
    <div class="container py-5" style="margin-top:130px;">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-4">
                        <h6 class="pb-4" style="text-decoration:underline;" id="departement">@(Model.Count>0? Model.FirstOrDefault().groupName:"لا توجد منتجات") /@(Model.Count>0? Model.FirstOrDefault().subGroupName : "")</h6>
                    </div>
                    <div class="col-md-8 pb-4">
                        <div class="d-flex">
                            @*<h6>ابحث في الاقسام</h6>*@
                            <select id="srchSlect" class="form-select" asp-items="@(new SelectList(ViewBag.Groups,"id","GroupNameAr",Model.Count>0? Model.FirstOrDefault().groupId:0))"></select>
                            <a id="Prouductsa" class="nav-link d-none" asp-controller="User" asp-action="Prouducts" asp-route-id="">@_localizer.GetLocalizedHtmlString("Products")</a>

                            <select id="subGroups" class="form-select" asp-items="@(new SelectList(ViewBag.subGroups,"id","GroupNameAr",Model.Count>0? Model.FirstOrDefault().subGroupId:0))"></select>
                            <a id="subGroupssa" class="nav-link d-none" asp-controller="User" asp-action="Prouducts" asp-route-mainGroupId="" asp-route-subGroupId="">test</a>
                        </div>
                    </div>

                </div>
                <div id="itemsDiv" class="row">
                    @{
                        if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <div class="col-md-3">
                                    <div class="card mb-4 product-wap rounded-0">
                                        <div class="card rounded-0">
                                            <img class="card-img rounded-0 img-fluid mx-auto d-block" id="itmProduct_@item.id" src="~/ItemsImages/@item.itemImgFile" style="height: 300px; width: 300px;">
                                            <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                                <ul class="list-unstyled">
                                                    @*<li><a class="btn btn-success text-white" href="#"><i class="far fa-heart"></i></a></li>*@
                                                    <li><a class="btn btn-success text-white mt-2" asp-controller="User" asp-action="ProuductDetails" asp-route-id="@item.id"><i class="far fa-eye"></i></a></li>
                                                    <li><a class="btn btn-success text-white mt-2" id="@item.id" name="@(System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en"? item.itemNameEn : item.itemNameAr)" onclick="add_ItemToInvoice('@item.price', this);"><i class="fas fa-cart-plus"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <a href="" class="h3 text-decoration-none text-success">@(System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en"? item.itemNameEn : item.itemNameAr)</a>
                                            <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                                <li style="font-size: 12px !important">@(System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en"? item.itemDescreptionEn : item.itemDescreptionAr)</li>
                                                <li class="pt-2">
                                                    <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                                                    <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                                                    <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                                                    <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                                                    <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                                                </li>
                                            </ul>
                                            <ul class="list-unstyled d-flex justify-content-center mb-1">
                                                <li>
                                                    <i class="text-warning fa fa-star"></i>
                                                    <i class="text-warning fa fa-star"></i>
                                                    <i class="text-warning fa fa-star"></i>
                                                    <i class="text-muted fa fa-star"></i>
                                                    <i class="text-muted fa fa-star"></i>
                                                </li>
                                            </ul>
                                            <p class="text-center mb-0" id="price" name="@item.price"> @item.price <span class="text-success">@item.curuncyName </span> </p>
                                        </div>
                                    </div>
                                </div>

                            }
                        }
                    }



                </div>
                <div div="row">
                    <ul class="pagination pagination-lg justify-content-end">
                        <li class="page-item disabled">
                            <a class="page-link active rounded-0 mr-3 shadow-sm border-top-0 border-left-0" href="#" tabindex="-1">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link rounded-0 mr-3 shadow-sm border-top-0 border-left-0 text-dark" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link rounded-0 shadow-sm border-top-0 border-left-0 text-dark" href="#">3</a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
    <!-- End Content -->
    <!-- Start Brands -->
    <section class="bg-light py-5">
        <div class="container my-4">
            <div class="row text-center py-3">
                <div class="col-lg-6 m-auto">
                    <h1 class="h1">Our Brands</h1>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                        Lorem ipsum dolor sit amet.
                    </p>
                </div>
                <div class="col-lg-9 m-auto tempaltemo-carousel">
                    <div class="row d-flex flex-row">
                        <!--Controls-->
                        <div class="col-1 align-self-center">
                            <a class="h1" href="#multi-item-example" role="button" data-bs-slide="prev">
                                <i class="text-light fas fa-chevron-left"></i>
                            </a>
                        </div>
                        <!--End Controls-->
                        <!--Carousel Wrapper-->
                        <div class="col">
                            <div class="carousel slide carousel-multi-item pt-2 pt-md-0" id="multi-item-example" data-bs-ride="carousel">
                                <!--Slides-->
                                <div class="carousel-inner product-links-wap" role="listbox">

                                    <!--First slide-->
                                    <div class="carousel-item active">
                                        <div class="row">
                                            <div class="col-3 p-md-5">
                                                <a href="#"><img class="img-fluid brand-img" src="~/UserAssets/img/brand_01.png" alt="Brand Logo"></a>
                                            </div>
                                            <div class="col-3 p-md-5">
                                                <a href="#"><img class="img-fluid brand-img" src="~/UserAssets/img/brand_02.png" alt="Brand Logo"></a>
                                            </div>
                                            <div class="col-3 p-md-5">
                                                <a href="#"><img class="img-fluid brand-img" src="~/UserAssets/img/brand_03.png" alt="Brand Logo"></a>
                                            </div>
                                            <div class="col-3 p-md-5">
                                                <a href="#"><img class="img-fluid brand-img" src="~/UserAssets/img/brand_04.png" alt="Brand Logo"></a>
                                            </div>
                                        </div>
                                    </div>
                                    <!--End First slide-->
                                    <!--Second slide-->
                                    <div class="carousel-item">
                                        <div class="row">
                                            <div class="col-3 p-md-5">
                                                <a href="#"><img class="img-fluid brand-img" src="~/UserAssets/img/brand_01.png" alt="Brand Logo"></a>
                                            </div>
                                            <div class="col-3 p-md-5">
                                                <a href="#"><img class="img-fluid brand-img" src="~/UserAssets/img/brand_02.png" alt="Brand Logo"></a>
                                            </div>
                                            <div class="col-3 p-md-5">
                                                <a href="#"><img class="img-fluid brand-img" src="~/UserAssets/img/brand_03.png" alt="Brand Logo"></a>
                                            </div>
                                            <div class="col-3 p-md-5">
                                                <a href="#"><img class="img-fluid brand-img" src="~/UserAssets/img/brand_04.png" alt="Brand Logo"></a>
                                            </div>
                                        </div>
                                    </div>
                                    <!--End Second slide-->
                                    <!--Third slide-->
                                    <div class="carousel-item">
                                        <div class="row">
                                            <div class="col-3 p-md-5">
                                                <a href="#"><img class="img-fluid brand-img" src="~/UserAssets/img/brand_01.png" alt="Brand Logo"></a>
                                            </div>
                                            <div class="col-3 p-md-5">
                                                <a href="#"><img class="img-fluid brand-img" src="~/UserAssets/img/brand_02.png" alt="Brand Logo"></a>
                                            </div>
                                            <div class="col-3 p-md-5">
                                                <a href="#"><img class="img-fluid brand-img" src="~/UserAssets/img/brand_03.png" alt="Brand Logo"></a>
                                            </div>
                                            <div class="col-3 p-md-5">
                                                <a href="#"><img class="img-fluid brand-img" src="~/UserAssets/img/brand_04.png" alt="Brand Logo"></a>
                                            </div>
                                        </div>
                                    </div>
                                    <!--End Third slide-->

                                </div>
                                <!--End Slides-->
                            </div>
                        </div>
                        <!--End Carousel Wrapper-->
                        <!--Controls-->
                        <div class="col-1 align-self-center">
                            <a class="h1" href="#multi-item-example" role="button" data-bs-slide="next">
                                <i class="text-light fas fa-chevron-right"></i>
                            </a>
                        </div>
                        <!--End Controls-->
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>




<script>
    var shopingCar = 0;
    function add_ItemToInvoice(price, e) {
        debugger;
        var id = e.id;
        $.ajax({
            type: "POST",
            url: "/Home/addItemToCard",
            dataType: "json",
            data: { id: id, shopingCar: shopingCar },
            contentType: "application/x-www-form-urlencoded",
            success: function (r) {
                $("#shopingCar").html(r);



            }
        });


    };


    $(document).ready(function () {
        $.ajax({
            type: "get",
            url: "/Home/GeSshopingCarCount",
            dataType: "json",
            contentType: "application/x-www-form-urlencoded",
            success: function (r) {
                debugger;
                shopingCar = r;
                $("#shopingCar").html(r);
            }
        });
        $("#srchSlect").on("change", function () {
            debugger
            var id = $(this).val();
            var $link = $('#Prouductsa');
            var href = $link.attr('href').split('/');
            href[3] = id; //here you set your new asp-route-id value
            $link.attr('href', href.join('/'));
            $('#Prouductsa')[0].click();

        });

        $("#subGroups").on("change", function () {
            debugger
            var id = $(this).val();
            var $link = $('#subGroupssa');
            var href = $link.attr('href').split('/');
            href[4] = id; //here you set your new asp-route-id value
            $link.attr('href', href.join('/'));
            $('#subGroupssa')[0].click();

        });


    });

</script>