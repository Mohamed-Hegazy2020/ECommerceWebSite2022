@model MyECommerceWebSite2022.ModelsView.CuruncesViewModel
@inject MyECommerceWebSite2022.Resources.LocalizationService _localizer

@{
    ViewData["Title"] = @_localizer.GetLocalizedHtmlString("CreateCuruncyTitle");
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<h4>@_localizer.GetLocalizedHtmlString("CreateCuruncyTitle")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CuruncyNameAr" class="control-label"></label>
                <input asp-for="CuruncyNameAr" class="form-control" />
                <span asp-validation-for="CuruncyNameAr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuruncyNameEn" class="control-label"></label>
                <input asp-for="CuruncyNameEn" class="form-control" />
                <span asp-validation-for="CuruncyNameEn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="isDefualtCuruncy" class="control-label"></label>
                <input asp-for="isDefualtCuruncy" class="checkbox" />
                <span asp-validation-for="isDefualtCuruncy" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <input type="submit" value="@_localizer.GetLocalizedHtmlString("Create")" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">@_localizer.GetLocalizedHtmlString("BackToList")</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
