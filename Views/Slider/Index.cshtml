@model IEnumerable<MyECommerceWebSite2022.ModelsView.SliderViewModel>
@inject MyECommerceWebSite2022.Resources.LocalizationService _localizer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<h1>@_localizer.GetLocalizedHtmlString("SliderTab")</h1>

 <p>
     <a asp-action="Create" class="btn btn-success"> @_localizer.GetLocalizedHtmlString("CreateNew")</a>
 </p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.id)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.HedarAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HedarEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescreptionAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescreptionEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.HedarAr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HedarEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescreptionAr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescreptionEn)
                </td>
                <td>
                    <img src="~/SliderImages/@item.ImagePath" style="height: 60px; width: 60px;" class="img-thumbnail" />
                </td>
                <td>
                    @Html.ActionLink(@_localizer.GetLocalizedHtmlString("Edit"), "Edit", new { id = item.id }) |
                    @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                    @Html.ActionLink(@_localizer.GetLocalizedHtmlString("Delete"), "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
